{
  "version": 2,
  "builds": [
    { "src": "server/index.js", "use": "@vercel/node" },
    { "src": "client/public/**/*", "use": "@vercel/static" }
  ],
  "routes": [

    { "src": "/api/(.*)", "dest": "/server/index.js" },
    { "src": "/search", "dest": "/server/index.js" },
    { "src": "/find", "dest": "/server/index.js" },

  
    { "src": "/css/(.*)", "dest": "/client/public/css/$1" },
    { "src": "/js/(.*)", "dest": "/client/public/js/$1" },
    { "src": "/image/(.*)", "dest": "/client/public/image/$1" },

 
    { "src": "/(.*)", "dest": "/client/public/index.html" }
  ]
}
